{
    "manifest_version": 3,
    "name": "Chrome Chords",
    "version": "1.0",
    "description": "This extension will find the chords for the song you are playing on YouTube",
    "permissions": ["activeTab", "storage", "tabs", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }